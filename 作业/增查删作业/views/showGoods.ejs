<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title></title>
	</head>
	<body>
		
		<h1>查看</h1>
		<table border="1">
			<tr>
				<td>序号</td>
				<td>商品名</td>
				<td>单价</td>
				<td>操作</td>
			</tr>
			<%
				for(let i=0;i<goods.length;i++){
			%>
				
			<tr>
				<td><%= i+1%></td>
				<td><%= goods[i].proname%></td>
				<td><%= goods[i].price%></td>
				<td onclick="deleleGood(<%= i%>)">删除</td>
			</tr>
			<%
				}
			%>
		</table>
		
	</body>
	<script src="/js/jquery-1.11.1.min.js"></script>
	<script>
	function deleleGood(id){
		$.ajax({
		url:"/deleleGoods?id="+id,
		success:function(res){
			alert(res);
			location.reload()
		}
	})
		
	}
	
	</script>
</html>

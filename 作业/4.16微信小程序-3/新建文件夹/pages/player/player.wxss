/* 播放器 */
.musicbox{
  display: flex;
  width: 90%;
  height: 200rpx;
  line-height: 200rpx;
  justify-content: space-around;
  border: 2rpx solid #ccc;
  box-shadow: 0 0 5px gray;
  border-radius: 10rpx;
}
.musicbox .mimgs{
  position: relative;
}
.musicbox .musicbg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.musicbox .musicbtn{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 100rpx;
  height: 100rpx;
}
/* 猜字区 */
.inputgroup{
  margin-top: 60rpx;
}
.wordname{
  display: inline-block;
  width: 3em;
  height: 3em;
  background: #dfe4e8;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
/* 关键字区域 */
.content{
  border: grey 2rpx solid;
  margin-top: 60rpx;
  padding: 50rpx;
}
.content .btn{
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  background: #dfe4e8;
  text-align: center;
  margin:10rpx;
  border-radius: 10rpx;
}
.content .btnhover{
  background-color: #ccc;
}
